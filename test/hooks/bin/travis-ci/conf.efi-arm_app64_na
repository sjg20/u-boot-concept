console_impl=qemu
qemu_machine="virt"
qemu_binary="qemu-system-aarch64"
qemu_extra_args="-nographic -cpu cortex-a57 -m 512"
qemu_extra_args+=" -netdev user,id=net0,tftp=${UBOOT_TRAVIS_BUILD_DIR} -device e1000,netdev=net0 "
qemu_extra_args+=" -object rng-random,filename=/dev/urandom,id=rng0"
qemu_extra_args+=" -device virtio-rng-pci,rng=rng0"
qemu_extra_args+=" -drive if=pflash,format=raw,file=/vid/software/devel/efi/OVMF-pure-efi.aarch64.fd.64m"
qemu_extra_args+=" -drive if=virtio,file=try.img,format=raw,id=fw0"
qemu_extra_args+=" -drive if=virtio,file=/tmp/b/sandbox/persistent-data/vbe1.img,format=raw,id=hd1"

reset_impl=none
flash_impl=none
